doctype html
html
  head
    title Movies
    link(
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    )
  body
    div.container
      div
        a(href='/addmovie').btn.btn-primary Add customer
      div
         table.table.table-striped
          tbody
            thead
              tr
                td firstname
                td lastname
                td email
                td phone
            each movie in movies
              tr 
                td #{movie.firstname}
                td #{movie.lastname}
                td #{movie.email}
                td #{movie.phone}